<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GenderActivity">

    <TextView
        android:id="@+id/generosescolhatexto"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:fontFamily="@font/looneytunes"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content"
        android:text="@string/genders" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scrollbars="none"
        android:layout_marginBottom="3dp"
        >

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:background="#fff"
            android:isScrollContainer="true"
            android:orientation="vertical"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/btMale"
                    android:background="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/homem" />

                <ImageButton
                    android:id="@+id/btFemale"
                    android:background="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/mulher" />


            </TableRow>



            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/btDoubtorPreferDontSay"
                    android:layout_width="wrap_content"
                    android:background="#fff"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/naosabegenero" />

                <ImageButton
                    android:id="@+id/manyoranothergenders"
                    android:layout_width="wrap_content"
                    android:background="#fff"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/homensemulheresoudemaisgeneros" />

            </TableRow>


        </TableLayout>


    </ScrollView>

</RelativeLayout>