<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/classical_landscape"
    android:layout_height="match_parent"
    tools:context=".SomActivity">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_marginTop="1in"
        android:id="@+id/asopcoes"
        android:textAlignment="center"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/som_on"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_marginStart="1in"
            android:textSize="20sp"
            android:textColor="@color/cardview_light_background"
            android:fontFamily="@font/looneytunes"
            android:layout_height="wrap_content"
            android:text="ON" />

        <RadioButton
            android:id="@+id/som_off"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_marginStart="1in"
            android:textSize="20sp"
            android:fontFamily="@font/looneytunes"
            android:textColor="@color/cardview_light_background"
            android:layout_height="wrap_content"
            android:text="OFF" />

    </RadioGroup>


</RelativeLayout>