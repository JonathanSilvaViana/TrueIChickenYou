<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context=".RegrasActivity">

    <ImageView
        android:layout_marginTop="70dp"
        android:id="@+id/imgsobre"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/livro_de_regras_final" />


    <Switch
        android:id="@+id/toggleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="290dp"
        android:text="@string/termos"
        android:verticalScrollbarPosition="left"
        android:fontFamily="@font/indieflower"
        android:enabled="true"
        android:background="#fff"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:textOn="@string/aceito"
        android:textOff="@string/recuso"
        android:checked="false"
        android:layout_centerHorizontal="true"
        />

    <ListView
        android:id="@+id/lista_regras"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:dividerHeight="1dp"
        android:fontFamily="@font/indieflower"
        android:layout_marginTop="335dp"
        android:entries="@array/therules"
        />

</RelativeLayout>